<Window x:Class="EventRoutingTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventRoutingTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" ButtonBase.Click="Window_Click">
    <Grid>
        <StackPanel Margin="20" ButtonBase.Click="StackPanel_Click">
            <StackPanel Margin="10">
                <TextBlock Name="txt1" FontSize="18" Margin="5" Text="TextBlock1"/>
                <TextBlock Name="txt2" FontSize="18" Margin="5" Text="TextBlock2"/>
                <TextBlock Name="txt3" FontSize="18" Margin="5" Text="TextBlock3"/>
            </StackPanel>
            <Button Margin="10" Content="Click Me" Click="Button_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
