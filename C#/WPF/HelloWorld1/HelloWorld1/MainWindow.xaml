<Window x:Class="HelloWorld1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" Content="Enter a Name ?" HorizontalAlignment="Left" Margin="157,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="280,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Click ME!" HorizontalAlignment="Left" Margin="430,93,0,0" VerticalAlignment="Top" Width="73" Click="button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="179,152,0,0" TextWrapping="Wrap" Text="Hello World! I am clickable" VerticalAlignment="Top" Height="36" Width="324" MouseLeftButtonUp="textBlock_MouseLeftButtonUp"/>
    </Grid>
</Window>
